---
import "..//styles/style.css";
const { variant = "primary_1", size = "medium" } = Astro.props;
---

<button data-variant={variant} data-size={size} class="btn"><slot /></button>

<style>
  /* Variants */
  [data-variant="primary_1"] {
    background: var(--cta_green);
    color: var(--font-white);
  }

  [data-variant="primary_2"] {
    background: var(--cta_blue);
    color: var(--font-white);
  }

  [data-variant="secondary"] {
    background-color: var(--cta_black);
    color: var(--font-white);
  }


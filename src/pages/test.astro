---
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import CardSektion from "../components/CardSektion.astro";
import MainLayout from "../layouts/MainLayout.astro";
import Splash from "../components/Splash.astro";
import Intro from "../components/Intro.astro";
import "..//styles/style.css";
---

<MainLayout title="3. SEM - Eksamensprojekt">
  <Splash
    title="Donation"
    description="Din donation har magten til at forvandle og redde liv. Når du støtter os med en donation, giver du dyrene en anden chance for et bedre liv."
    imgPath="/public/splash/donation.jpg"
  />
  <Intro
    title="Din donation gør en forskel"
    description="Vi har gjort det nemt og enkelt at bidrage med en donation. Vælg mellem en enkel, månedlig eller virksomheds-donation og udfyld formularen."
  />

  <div x-data="{ step: 1 }">
    <div class="flex justify-center items-center h-screen">
      <div class="max-w-xl">
        <div class="mb-4">
          <!-- <h2 class="text-xl font-bold">Step {{ step }}</h2> -->
        </div>
        <div x-show="step === 1">
          <p>Step 1 content</p>
          <div>
            <label class="label">
              <span class="label-text text-lg text-white">Fulde navn</span>
            </label>
            <input
              type="text"
              placeholder="Indtast navn"
              class="input-bordered input w-full max-w-xl bg-white text-custom_purple dark:bg-white"
            />
          </div>

          <div>
            <label class="label">
              <span class="label-text text-lg text-white">Email</span>
            </label>
            <input
              type="text"
              placeholder="Indtast email"
              class="input-bordered input w-full max-w-xl bg-white text-custom_purple dark:bg-white"
            />
          </div>

          <div>
            <label class="label">
              <span class="label-text text-lg text-white">Telefonnummer</span>
            </label>
            <input
              type="text"
              placeholder="Indtast emne"
              class="input-bordered input w-full max-w-xl bg-white text-custom_purple dark:bg-white"
            />
          </div>
        </div>
        <div x-show="step === 2">
          <p>Step 2 content</p>
        </div>
        <div x-show="step === 3">
          <p>Step 3 content</p>
        </div>
        <div x-show="step === 4">
          <p>Step 4 content</p>
        </div>
        <div class="flex justify-between mt-4">
          <button class="btn btn-primary" x-show="step > 1" @click="step--"
            >Previous</button
          >
          <button class="btn btn-primary" x-show="step < 4" @click="step++"
            >Next</button
          >
        </div>
      </div>
    </div>
  </div>
</MainLayout>


---
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import CardSektion from "../components/CardSektion.astro";
import MainLayout from "../layouts/MainLayout.astro";
import "..//styles/style.css";
import Testimonial from "../components/Testimonial.astro";
import Splash from "../components/Splash.astro";
---

<MainLayout title="3. SEM - Eksamensprojekt">
  <Splash
    title="Donation"
    description="Din donation har magten til at forvandle og redde liv. Når du støtter os med en donation, giver du dyrene en anden chance for et bedre liv."
    imgPath="/public/splash/donation.jpg"
  />
  <Button variant="primary_1" size="medium">Støt dyrene</Button>
  <Button variant="primary_2" size="medium">Find kæledyr</Button>
  <Button variant="secondary" size="medium">Næste</Button>
  <Testimonial
    title="»De dygtigste matchmakere«"
    description="“De er dygtige matchmakere, og grundige i deres research af adoptionsfamilier. I er så glade for dyr, og det var vigtigt for mig, at Buller skulle være glad fra dag 1, uanset hvad han laver af unoder.”"
    ejer="Betina, tidligere ejer af Buller"
    imgPath="/public/adoption/basse.webp"
  />

  <Card />
</MainLayout>

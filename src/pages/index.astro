---
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import CardSektion from "../components/CardSektion.astro";
import MainLayout from "../layouts/MainLayout.astro";
import Faktaboks from "../components/Faktaboks.astro";
import Footer from "../components/Footer.astro";
import Intro from "../components/Intro.astro";

import "..//styles/style.css";
import Testimonial from "../components/Testimonial.astro";
import Splash from "../components/Splash.astro";
---

<MainLayout title="3. SEM - Eksamensprojekt">
  <Splash title="Donation" description="Din donation har magten til at forvandle og redde liv. Når du støtter os med en donation, giver du dyrene en anden chance for et bedre liv." imgPath="/public/splash/donation.jpg" />
  <Button variant="primary_1" size="medium">Støt dyrene</Button>
  <Button variant="primary_2" size="medium">Find kæledyr</Button>
  <Button variant="secondary" size="medium">Næste</Button>
  <Testimonial title="»De dygtigste matchmakere«" description="“De er dygtige matchmakere, og grundige i deres research af adoptionsfamilier. I er så glade for dyr, og det var vigtigt for mig, at Buller skulle være glad fra dag 1, uanset hvad han laver af unoder.”" ejer="Betina, tidligere ejer af Buller" imgPath="/public/adoption/basse.webp" />
  <Faktaboks text="Ring til os på hverdage mellem 9.30 - 12.00 på telefonnummer 4494 6695" />
  <CardSektion />

  <Card imgPath="adoption/basse.webp" title="Basse" description="De er dygtige matchmakere, og grundige i deres research af adoptionsfamilier."><img src="gender_icon.svg" alt="gender-icon" /></Card>
  <Card imgPath="adoption/basse.webp" kategori="How to" title="Basse" description="De er dygtige matchmakere, og grundige i deres research af adoptionsfamilier." />
</MainLayout>

<MainLayout title="3. SEM - Eksamensprojekt">
  <main>
    <div></div>

    <section class="hero">
      <div>
        <img src="../splash/splash.webp" alt="Hund" class="w-screen bg-cover" />
      </div>

      <div class="grid text-white justify-start">
        <div class="">
          <h1>ALLE DYR FORTJENER ET GODT HJEM</h1>
          <p class="pt-5">Vi er dedikeret til at redde og beskytte dyr i nød. Vi arbejder for at finde kærlige hjem til vores pelsede venner og sikre, at de får den omsorg og opmærksomhed, de fortjener.</p>
          <div class="pt-5">
            <Button variant="primary_1" size="medium">STØT</Button>
          </div>
        </div>
      </div>
    </section>

    <section class="bg-secondary_beige">
      <Intro title="KLAR TIL EN NY VEN?" description="Læs om alle de dejlige hunde, katte, kaniner og smådyr her på siden og find netop det dyr der passer perfekt til dit hjem." />

      <div class="mb-10 grid grid-cols-2 lg:ml-10">
        <div class="flex gap-10 align-baseline">
          <div>
            <a href="adopter.astro"
              ><img src="../ikoner/hund_ikon.png" alt="Hund" />
              <p class="underline text-center pt-2">Hund</p>
            </a>
          </div>
          <div>
            <a href="adopter.astro"
              ><img src="../ikoner/kat_ikon.png" alt="Kat" />
              <p class="underline text-center pt-2">Kat</p>
            </a>
          </div>
          <div>
            <a href=" adopter.astro">
              <img src="../ikoner/kanin_ikon.png" alt="Kanin" />
              <p class="underline text-center pt-2">Kanin</p>
            </a>
          </div>
          <div>
            <a href="adopter.astro"
              ><img src="../ikoner/marsvin_ikon.png" alt="marsvin" />
              <p class="underline text-center pt-2">Marsvin</p>
            </a>
          </div>
        </div>

        <div class="border-l-2 border-black col-start-2">
          <div class="justify-center grid">
            <h3 class="">191</h3>
          </div>
          <p class="justify-center grid pt-4">venter på nyt hjem. Ingen fortjener at være alene <br />- adopter fra fyreværnet og gør en forskel</p>
          <Button variant="primary_1" size="medium">FIND KÆLEDYR</Button>
        </div>
      </div>
    </section>
  </main>
</MainLayout>
